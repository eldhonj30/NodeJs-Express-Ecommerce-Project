  <script>
    function dashFilter(data) {

      $.ajax({
        url: '/admin/filter',
        data: {
          data: data
        },
        method: 'POST',
        success: (response) => {

          document.getElementById('product').innerHTML = response.product
          document.getElementById('amount').innerHTML = response.amount
          document.getElementById('user').innerHTML = response.user
        }
      })
    }
